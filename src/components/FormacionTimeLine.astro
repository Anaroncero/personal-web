</section>

<style>
  section {
    font-family: var(--font-regular);
    padding: 16px 2rem;
    font-size: 16px;
    overflow-x: hidden;
  }
  .timeline {
    border-left: 2px solid var(--font-color-light);
    position: relative;
    display: flex;
    flex-direction: column;  
  }
  .timeline-item-list {
    list-style: none;
    padding-left: 1rem;
    padding-bottom: 4rem;
    display: flex;
    flex-direction: column;
  }

  .timeline-item-list h3{
    font-family: var(--font-bold);
  }

  .timeline-item-list p{
    font-family: var(--font-regular);
  }

  .timeline-item-list time{
    font-family: var(--font-light);
  }

  .box-logo {
    height: 4rem;
    width: 4rem;
    background-color: rgb(255, 255, 255);
    border-radius: 6px;
    position: absolute;
    left: -30px;
    margin-top: 5px;
    
  }

  span{
    color:#22c55e;
  }

  .logo {
    height: 4rem;
    width: auto;
    border-radius: 6px;
  }
</style>
