<section class="timeline-section">
  <ul class="timeline">
    <li class="timeline-item-list">
      <div class="box-logo">
        <img class="logo" src="/public/images/medac_logo.jpeg" alt="logo" />
      </div>

      <h3>MEDAC</h3>
      <p>DAM Desarrollo de aplicaciones multiplataforma</p>
      <time datetime="2023-actually">2023 - <span>Actualidad</span></time>
    </li>

    <li class="timeline-item-list">
      <div class="box-logo">
        <img
          class="logo"
          src="/public/images/reyesdeespana_logo.png"
          alt="logo"
        />
      </div>
      <h3>IES Reyes de España</h3>
      <p>Bachillerato</p>
      <time datetime="2021-2023">2021 - 2023</time>
      <!-- experiencia  <a href=""></a> -->
