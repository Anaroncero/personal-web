---
const { href } = Astro.props;
---
<span class="container">
  <a href={href} class="indicator"></a>
  <slot />
</span>

<style>
  .container {
    font-size: 12px;
    font-family: var(--font-regular);
    height: 24px;
    padding: 2px 10px;
    border-radius: 6px;
    display: inline-flex;
    gap: 8px;
    align-items: center;
    color: #d1fae5;
    background-color: #065f46;
    transform: var(--transition-config);
    white-space: nowrap;
   

    & .indicator {
      width: 0.5rem; /* 8px */
      height: 0.5rem; 
      background-color: #22c55e; 
      border-radius: 9999px; 
    }

    &:hover {
        background-color: #0d805c; 
        box-shadow: 0 0 8px rgba(0, 0, 0, 0.1); 
    }
  }
</style>
